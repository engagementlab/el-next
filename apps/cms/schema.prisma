// This file is automatically generated by Keystone, do not modify it manually.
// Modify your Keystone config when you want to change this.

datasource postgresql {
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  provider          = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

model About {
  id      String @id @default(cuid())
  name    String @unique @default("About Page")
  content Json   @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
}

model Filter {
  id                     String      @id @default(cuid())
  name                   String      @default("")
  key                    String      @default("")
  enabled                Boolean     @default(true)
  from_MediaItem_filters MediaItem[] @relation("MediaItem_filters")
}

model Initiative {
  id     String  @id @default(cuid())
  name   String  @unique @default("Initiative Name")
  intro  String  @default("")
  slides Slide[] @relation("Initiative_slides")
}

model InitiativesLanding {
  id          String @id @default(cuid())
  name        String @unique @default("Initiatives Landing Page")
  description String @default("")
}

model MediaItem {
  id               String                  @id @default(cuid())
  title            String                  @default("")
  key              String                  @unique @default("")
  createdDate      DateTime?
  enabled          Boolean                 @default(true)
  thumbnail        Json?
  shortDescription String                  @default("")
  filters          Filter[]                @relation("MediaItem_filters")
  initiative       MediaItemInitiativeType @default(GunViolence)
  associatedPeople Person[]                @relation("MediaItem_associatedPeople")
  content          Json                    @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
  videos           Json?
  file_filename    String?
  file_filesize    Int?
}

model Person {
  id          String      @id @default(cuid())
  name        String      @default("")
  key         String      @default("")
  title       String      @default("")
  createdDate DateTime?
  enabled     Boolean     @default(true)
  image       Json?
  blurb       String      @default("")
  content     Json        @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
  mediaItems  MediaItem[] @relation("MediaItem_associatedPeople")
  studios     Studio[]    @relation("Person_studios")
  semesters   Semester[]  @relation("Person_semesters")
}

model Semester {
  id               String    @id @default(cuid())
  name             String    @default("")
  key              String    @unique @default("")
  createdDate      DateTime?
  enabled          Boolean   @default(true)
  order            Int?
  thumbnail        Json?
  blurb            String    @default("")
  associatedPeople Person[]  @relation("Person_semesters")
  content          Json      @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
}

model Slide {
  id               String       @id @default(cuid())
  initiativeSlides Initiative[] @relation("Initiative_slides")
  image            Json?
  altText          String       @default("")
  videoId          String       @default("")
}

model Studio {
  id          String               @id @default(cuid())
  name        String               @default("")
  key         String               @unique @default("")
  createdDate DateTime?
  instructors Person[]             @relation("Person_studios")
  description String               @default("")
  initiatives StudioInitiativeType
}

enum MediaItemInitiativeType {
  GunViolence
  Climate
}

enum StudioInitiativeType {
  gunviolence
  climate
  incarceration
}
