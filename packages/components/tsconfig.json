{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ESNext",
        "declaration": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "isolatedModules": true,
        "skipLibCheck": true,
        "jsx": "react"
    },
    "include": ["src"],
    "exclude": ["node_modules", "lib"],
    "typedocOptions": {
        "entryPoints": ["src/index.ts"],
        "exclude": "**/node_modules/**",
        "out": "docs"
    }
}