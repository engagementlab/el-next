{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ESNext",
        "declaration": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "isolatedModules": true,
        "skipLibCheck": true,
        "jsx": "react",
        "paths": {
        "react": ["./node_modules/@type/react"],
        "@/*": ["./*"]
        }
    },
    "include": ["src"],
    "exclude": ["node_modules", "lib"],
    "typedocOptions": {
        "entryPoints": ["src/index.ts"],
        "exclude": "**/node_modules/**",
        "out": "docs"
    }
}